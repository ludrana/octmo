@page
@model oktmo.Pages.Shared._SearchFormModel
@{
}
<form id="searchForm" method="get" action="/Codes/Search">
    <input type="text" name="SearchString" id="SearchString" placeholder="Поиск..."/>
</form>

<script>
    document.getElementById("SearchString").addEventListener("keypress", function (event) {
        if (event.key === "Enter") {
            event.preventDefault(); // Prevent form submission by default
            document.getElementById("searchForm").submit(); // Submit the form
        }
    });
</script>