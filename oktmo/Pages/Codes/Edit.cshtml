@page
@model oktmo.Pages.Codes.EditModel

@{
    ViewData["Title"] = "Редактировать запись";
}

<h1>Редактировать запись</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OktmoEntry.Id" />
            <div class="form-group">
                <label asp-for="OktmoEntry.Octmo" class="control-label"></label>
                <input asp-for="OktmoEntry.Octmo" class="form-control" />
                <span asp-validation-for="OktmoEntry.Octmo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OktmoEntry.Razdel" class="control-label"></label>
                <input asp-for="OktmoEntry.Razdel" class="form-control" />
                <span asp-validation-for="OktmoEntry.Razdel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OktmoEntry.Name" class="control-label"></label>
                <input asp-for="OktmoEntry.Name" class="form-control" />
                <span asp-validation-for="OktmoEntry.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">На главную</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
