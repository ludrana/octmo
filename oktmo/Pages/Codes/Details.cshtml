@page
@model oktmo.Pages.Codes.DetailsModel

@{
    ViewData["Title"] = "ОкТМО";
}

<table class="table">
    <tr>
        <td>
            @Html.DisplayFor(model => model.OktmoEntry.Octmo)
        </td>
        <td>
            @Html.DisplayFor(model => model.OktmoEntry.Name)
        </td>
    </tr>
</table>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OktmoEntryListPrev[0].Octmo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OktmoEntryListPrev[0].Razdel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OktmoEntryListPrev[0].Name)
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OktmoEntryListPrev)
        { 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Octmo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Razdel)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                }
                
            </tr>
        }
        <tr></tr>
        @foreach (var item in Model.OktmoEntryListNext)
        { 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Octmo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Razdel)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (User.Identity.IsAuthenticated)
{
<div visible="false" id="h" class="w-100">
	<p>Скрытые записи</p>
	<table class="table">

		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.OktmoEntryListPrev[0].Octmo)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.OktmoEntryListPrev[0].Razdel)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.OktmoEntryListPrev[0].Name)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.OktmoEntryListPrevHidden)
			{ //
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Octmo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Razdel)
					</td>
					<td>
                        <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
					<td>
						<a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
						<a asp-page="./Restore" asp-route-id="@item.Id">Восстановить</a>
					</td>
				</tr>
			}
			@foreach (var item in Model.OktmoEntryListNextHidden)
			{ //
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Octmo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Razdel)
					</td>
					<td>
                        <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
					<td>
						<a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
						<a asp-page="./Restore" asp-route-id="@item.Id">Восстановить</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
}
